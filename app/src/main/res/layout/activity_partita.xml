<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/sfondo"
    android:id="@+id/partita"
    android:orientation="vertical"
    android:gravity="center">


<TextView
    android:id="@+id/esposto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Esposto"
    android:textColor="@color/testo_bottoni"
    android:gravity="center"
    android:textSize="@dimen/testo_enigma"/>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tabellaSoluzione"
    >

</TableLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea"
        android:background="@color/testo_bottoni"
        android:layout_marginTop="@dimen/spaziLinea"
        android:layout_marginBottom="@dimen/spaziLinea">

    </LinearLayout>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabellaBottoni"
        android:layout_marginBottom="@dimen/spaziLinea">


    </TableLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/bottoni"
            android:textColor="@color/testo_bottoni"
            android:onClick="reset"
            />
        <Button
            android:id="@+id/invia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invia"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/bottoni"
            android:textColor="@color/testo_bottoni"
            android:onClick="inviaSoluzione"

            />


    </RelativeLayout>



</LinearLayout>
